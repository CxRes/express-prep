{
  "name": "express-prep",
  "version": "0.5.1",
  "description": "A Connect/Express style middleware for the Per Resource Events Protocol",
  "keywords": [
    "per resource events",
    "events",
    "negotiate",
    "notification",
    "notifications",
    "subscription",
    "prep"
  ],
  "author": "Rahul Gupta",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CxRes/express-prep.git"
  },
  "type": "module",
  "main": "src/prep.js",
  "exports": {
    ".": "./src/prep.js",
    "./event-id": "./src/event-id.js",
    "./negotiate": "./src/negotiate.js",
    "./templates": "./src/templates.js"
  },
  "dependencies": {
    "crypto-random-string": "^5.0.0",
    "debug": "^4.3.5",
    "dedent": "^1.5.3",
    "lodash": "^4.17.21",
    "no-try": "^4.0.0",
    "structured-field-utils": "1.1.0-nested-sf.0",
    "structured-headers": "npm:@cxres/structured-headers@2.0.0-alpha.1-nesting.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.7.0",
    "cspell": "^8.11.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.8.0",
    "headright": "^0.1.1",
    "husky": "^9.1.1",
    "knip": "^5.26.0",
    "lint-staged": "^15.2.7",
    "parse-gitignore": "^2.0.0",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "express-accept-events": "^0.2.2",
    "express-negotiate-events": "^0.2.1"
  },
  "peerDependenciesMeta": {
    "express-negotiate-events": {
      "optional": true
    }
  },
  "scripts": {
    "format": "prettier * --check",
    "header": "hr --dry --verbose \"**\"",
    "header:modify": "hr --verbose \"**\"",
    "lint": "pnpm run --reporter=append-only --aggregate-output \"/(^lint:.*|format)/\"",
    "lint:code": "eslint .",
    "lint:header": "hr --dry \"**\"",
    "lint:knip": "knip",
    "lint:packages": "pnpm dedupe --check --silent",
    "lint:spelling": "cspell --dot --quiet \"**\"",
    "prepare": "node .husky/install.js",
    "prepublishOnly": "pnpm run lint"
  }
}
